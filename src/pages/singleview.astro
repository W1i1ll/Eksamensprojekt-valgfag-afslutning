---
import MainLayout from "../layouts/MainLayout.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import bottle1 from "../assets/images/bottle1.webp";
import bottle2 from "../assets/images/bottle2.webp";
import bottle3 from "../assets/images/bottle3.webp";
---

<MainLayout title="MaltClub - XL Pakke">
  <Header />

  <!-- XL Pakke Sektion -->
  <section class="bg-[#141414] text-white py-12">
    <div class="container mx-auto px-4 md:px-0 text-center">
      <h2 class="text-[#F59E0B] font-bold text-xl mb-4">VORES #1 TOP SELLER</h2>
      <h1 class="text-4xl font-bold mb-6">Maltclub XL pakke</h1>
      <p class="text-gray-300 max-w-xl mx-auto mb-6 leading-relaxed">
        Ølkassen består af 5-6 kvalitetsøl, som du højst sandsynligt ikke finder i dit lokale supermarked. Vi sætter en ære i at håndplukke øl til dig, så det passer til både årstiden og højtider.
      </p>
      <div class="flex justify-center gap-4 mb-6">
        <img src={bottle1.src} alt="Flaske 1" class="w-24 md:w-36 object-contain" />
        <img src={bottle2.src} alt="Flaske 2" class="w-28 md:w-40 object-contain" />
        <img src={bottle3.src} alt="Flaske 3" class="w-32 md:w-44 object-contain" />
      </div>
      <div class="flex justify-center gap-4">
        <button class="bg-[#E5532C] hover:bg-[#C2411B] text-white py-2 px-6 rounded-md font-bold">
          Bestil nu
        </button>
        <button class="bg-[#F59E0B] hover:bg-[#D97706] text-black py-2 px-6 rounded-md font-bold">
          Køb som gave
        </button>
      </div>
    </div>
  </section>

  <!-- Statistik Sektion -->
  <section class="bg-[#C47C35] text-black py-8">
    <div class="container mx-auto grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
      <div>
        <h3 class="text-4xl font-bold">15+</h3>
        <p class="font-semibold">års erfaring</p>
      </div>
      <div>
        <h3 class="text-4xl font-bold">100K+</h3>
        <p class="font-semibold">Glade kunder</p>
      </div>
      <div>
        <h3 class="text-4xl font-bold">20+</h3>
        <p class="font-semibold">forskellige øl</p>
      </div>
      <div>
        <h3 class="text-4xl font-bold">10+</h3>
        <p class="font-semibold">forskellige lande</p>
      </div>
    </div>
  </section>

  <!-- Kundeanmeldelser Sektion -->
  <section class="bg-[#141414] text-white py-12">
    <div class="container mx-auto px-4">
      <h2 class="text-center text-3xl font-bold mb-8">HVAD SYNES DE ANDRE OM DET</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- Anmeldelse 1 -->
        <div class="bg-[#FAF8F4] text-black p-6 rounded-lg">
          <h3 class="font-bold">William D. Birch</h3>
          <p class="text-sm font-semibold mb-2">Bedste beslutning i mit liv!</p>
          <p>⭐⭐⭐⭐⭐</p>
          <p class="text-gray-500 mt-2">Blædetekst her skriver de om deres oplevelser...</p>
        </div>
        <!-- Anmeldelse 2 -->
        <div class="bg-[#FAF8F4] text-black p-6 rounded-lg">
          <h3 class="font-bold">Anniken B.</h3>
          <p class="text-sm font-semibold mb-2">Rigtig god oplevelse</p>
          <p>⭐⭐⭐⭐⭐</p>
          <p class="text-gray-500 mt-2">Blædetekst her skriver de om deres oplevelser...</p>
        </div>
        <!-- Anmeldelse 3 -->
        <div class="bg-[#FAF8F4] text-black p-6 rounded-lg">
          <h3 class="font-bold">Louise Geers</h3>
          <p class="text-sm font-semibold mb-2">Virkelig god øl</p>
          <p>⭐⭐⭐⭐⭐</p>
          <p class="text-gray-500 mt-2">Blædetekst her skriver de om deres oplevelser...</p>
        </div>
        <!-- Anmeldelse 4 -->
        <div class="bg-[#FAF8F4] text-black p-6 rounded-lg">
          <h3 class="font-bold">Naja Heggum</h3>
          <p class="text-sm font-semibold mb-2">Bedste kvalitet</p>
          <p>⭐⭐⭐⭐⭐</p>
          <p class="text-gray-500 mt-2">Blædetekst her skriver de om deres oplevelser...</p>
        </div>
      </div>
      <div class="text-center mt-8">
        <button class="bg-[#E5532C] hover:bg-[#C2411B] text-white py-2 px-6 rounded-md font-bold">
          Læs alle Trustpilot anmeldelser her
        </button>
      </div>
    </div>
  </section>

  <Footer />
</MainLayout>
