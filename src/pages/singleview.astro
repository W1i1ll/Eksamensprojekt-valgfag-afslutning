---
import MainLayout from "../layouts/MainLayout.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import oller from "../assets/images/oller.webp";
---

<MainLayout title="MaltClub - XL Pakke">
  <Header />

  <!-- XL Pakke Sektion -->
  <section class="bg-[#28272E] text-white py-12">
    <div
      class="container mx-auto flex flex-col md:flex-row items-center justify-center gap-8 px-6 md:px-0"
    >
      <!-- Flaske billede -->
      <div class="flex-shrink-0">
        <img
          src={oller.src}
          alt="Flaske"
          class="w-50 md:w-100 lg:w-999 object-contain"
        />
      </div>
      <!-- Tekst og knapper -->
      <div class="text-left max-w-lg">
        <h2 class="text-[#B8773B] karantina font-bold text-lg md:text-xl mb-2 uppercase">
          Vores #1 Top Seller
        </h2>
        <h1 class="text-3xl md:text-4xl karantina font-bold mb-4">Maltclub XL pakke</h1>
        <p class="text-gray-300 leading-relaxed mb-6">
          Ølkassen består af 5-6 kvalitetsøl, som du højst sandsynligt ikke
          finder i dit lokale supermarked. Vi sætter en ære i at håndplukke øl
          til dig, så det passer til både årstiden og højtider. Kassen består af
          forskellige typer af øl, sat sammen med respekt for håndværket og den
          gode historie bag øllen.
        </p>
        <div class="flex gap-4">
          <button
            class="bg-[#A6411B] hover:bg-[#7A3C25] text-white py-1 px-10 rounded-md karantina text-[32px]"
          >
            Bestil nu
          </button>
          <button
            class="bg-[#BE7F39] hover:bg-[#A9793F] text-black py-1 px-6 rounded-md karantina text-[32px]"
          >
            Køb som gave
          </button>
        </div>
      </div>
    </div>
  </section>

<!-- Statistik Sektion -->
<section class="bg-[#BE7F39] text-black py-16 px-6">
    <div class="container mx-auto grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      <div>
        <h3 class="text-4xl karantina text-[55px] font-bold">15+</h3>
        <p class="font-semibold">års erfaring</p>
      </div>
      <div>
        <h3 class="text-4xl karantina text-[55px] font-bold">5.000+</h3>
        <p class="font-semibold">Glade kunder</p>
      </div>
      <div>
        <h3 class="text-4xl karantina text-[55px] font-bold">20+</h3>
        <p class="font-semibold">forskellige øl</p>
      </div>
      <div>
        <h3 class="text-4xl karantina text-[55px] font-bold">10+</h3>
        <p class="font-semibold">forskellige lande</p>
      </div>
    </div>
  </section>
  

  <!-- Kundeanmeldelser Sektion -->
  <section class="bg-[#141414] text-white py-12">
    <div class="container mx-auto px-4">
      <h2 class="text-center text-3xl karantina font-bold mb-8">
        HVAD SYNES DE ANDRE OM DET
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- Anmeldelse 1 -->
        <div class="bg-[#EDE7DD] text-black p-6 rounded-lg karantina text-[32px]">
          <h3 class="karantina font-bold">William D. Birch</h3>
          <p class="text-sm font-semibold karantina text-[21px] mb-2">Bedste beslutning i mit liv!</p>
          <div class="text-green-500 text-xl">★★★★★</div>
          <p class="text-gray-500 jost text-[22px] mt-2">
            Var i tvilv først men efter det første pakke blev jeg forelsket!
          </p>
        </div>
        <!-- Anmeldelse 2 -->
        <div class="bg-[#EDE7DD] text-black p-6 rounded-lg karantina text-[32px]">
          <h3 class="karantina font-bold">Anniken B.</h3>
          <p class="text-sm font-semibold karantina text-[21px] mb-2">Rigtig god oplevelse</p>
          <div class="text-green-500 text-xl">★★★★★</div>
          <p class="text-gray-500 jost text-[22px] mt-2">
            Forskellige slags smage der gør det spændende
          </p>
        </div>

        <!-- Anmeldelse 3 -->
        <div class="bg-[#EDE7DD] text-black p-6 rounded-lg">
          <h3 class="karantina karantina text-[32px] font-bold">Louise Geers</h3>
          <p class="text-sm font-semibold mb-2 karantina text-[21px] ">Virkelig god øl</p>
          <div class="text-green-500 text-xl">★★★★★</div>
          <p class="text-gray-500 jost text-[22px] mt-2">
            Kunne ikke anbefalde mere!
          </p>
        </div>

        <!-- Anmeldelse 4 -->
        <div class="bg-[#EDE7DD] karantina text-[32px] text-black p-6 rounded-lg">
          <h3 class="karantina font-bold ">Naja Heggum</h3>
          <p class="text-sm font-semibold mb-2 karantina text-[21px] ">Bedste kvalitet</p>
          <div class="text-green-500 jost text-xl">★★★★★</div>
          <p class="text-gray-500 jost text-[22px] mt-2">
            Det bedste jeg har smagt længe!
          </p>
        </div>
      </div>
      <div class="text-center mt-8">
        <button
          class="bg-[#E5532C] hover:bg-[#C2411B] text-white py-2 px-6 rounded-md karantina text-[30px]"
        >
          Læs alle Trustpilot anmeldelser her
        </button>
      </div>
    </div>
  </section>

  <Footer />
</MainLayout>
